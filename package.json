{
	"name": "blogger",
	"version": "1.0.0",
	"scripts": {
		"dev": "next",
		"test": "jest --watchAll"
	},
	"license": "MIT",
	"dependencies": {
		"@apollo/client": "^3.3.21",
		"apollo-server-micro": "2.14.2",
		"argon2": "^0.28.2",
		"formik": "^2.2.9",
		"graphql": "^15.5.1",
		"jsonwebtoken": "^8.5.1",
		"micro": "^9.3.4",
		"mongodb": "^4.0.0",
		"next": "^11.0.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"yup": "^0.32.9"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^5.14.1",
		"@testing-library/react": "^12.0.0",
		"@testing-library/react-hooks": "^7.0.1",
		"@testing-library/user-event": "^13.1.9",
		"@types/faker": "^5.5.7",
		"@types/jest": "^26.0.24",
		"@types/jsonwebtoken": "^8.5.4",
		"@types/node": "^16.3.3",
		"@types/react": "^17.0.14",
		"@types/react-dom": "^17.0.9",
		"@types/yup": "^0.29.13",
		"babel-jest": "^27.0.6",
		"dotenv": "^10.0.0",
		"faker": "^5.5.3",
		"jest": "^27.0.6",
		"ts-jest": "^27.0.3",
		"typescript": "^4.3.5"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"setupFilesAfterEnv": [
			"<rootDir>/tests/setupTests.ts"
		],
		"testPathIgnorePatterns": [
			"/node_modules",
			"/.next"
		],
		"transform": {
			"^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/babel-jest"
		},
		"transformIgnorePatterns": [
			"/node_modules/",
			"^.+\\.module\\.(css|sass|scss)$"
		],
		"collectCoverageFrom": [
			"<rootDir>/src/**/*.{ts,tsx}"
		],
		"moduleNameMapper": {
			"src/(.*)": "<rootDir>/src/$1",
			"tests/(.*)": "<rootDir>/tests/$1"
		}
	}
}
